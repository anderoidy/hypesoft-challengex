{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    },
    "Console": {
      "IncludeScopes": true
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "MongoDBSettings": {
    "DatabaseName": "HypesoftDB_Prod"
  },
  "JwtSettings": {
    "Issuer": "Hypesoft.API",
    "Audience": "Hypesoft.Clients",
    "ExpirationInMinutes": 1440
  },
  "DetailedErrors": false,
  "UseInMemoryDatabase": false,
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Hypesoft API - Production",
        "Uri": "/health"
      }
    ],
    "EvaluationTimeInSeconds": 30,
    "MinimumSecondsBetweenFailureNotifications": 60
  }
}
