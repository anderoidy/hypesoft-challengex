{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "MongoDbSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "hypesoft_challenge"
  },
  "JwtSettings": {
    "Key": "super-secret-key-change-this-in-production",
    "Issuer": "Hypesoft.API",
    "Audience": "Hypesoft.Client",
    "ExpirationInMinutes": 1440
  },
  "Keycloak": {
    "Realm": "hypesoft",
    "AuthServerUrl": "http://localhost:8080/auth/",
    "Resource": "hypesoft-api",
    "Credentials": {
      "Secret": ""
    },
    "VerifyTokenAudience": true,
    "RequireHttpsMetadata": false
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:5001"
    ]
  }
}
