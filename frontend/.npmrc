# Ensure package-lock.json is generated with exact versions
package-lock=true

# Ensure consistent package installation
prefer-offline=true
strict-peer-dependencies=false

# Set the default package registry
registry=https://registry.npmjs.org/

# Ensure that the package-lock file is generated with exact versions
save-exact=true

# Set the engine-strict to true to ensure the correct node version is used
engine-strict=true

# Set the package manager to npm
package-manager=npm@latest

# Set the cache location
cache=.npm-cache

# Set the log level
loglevel=error

# Disable package-lock.json for workspaces
package-lock=false
workspaces-update-json=true

# Ensure that the package-lock file is generated with exact versions
save-prefix=
